{% extends 'base.html.twig' %}

{% block title %}Espace client{% endblock %}

{% block logo %}
    <a class="navbar-brand" href="{{ path('admin')}}">
        <img src="{{asset('images/admin_logo.png')}}" style="height: 110px;" alt="image">
    </a>
{% endblock %}

{% block header_links %}
    <div class="site_information">
        <ul>
            <li><a class="join_bt" href="{{ path('index') }}">Voir le site</a></li>
        </ul>
    </div>
{% endblock %}

{% block navbar_links %}
    <li><a class="nav-link active" href="{{ path('article_index') }}">Actualités</a></li>
    <li><a class="nav-link active" href="{{ path('contact_index') }}">Demandes de contact</a></li>
    <li><a class="nav-link active" href="{{ path('user_index') }}">Utilisateurs</a></li>
    <li><a class="nav-link active" href="{{ path('homepage_index') }}">Pages d'accueil</a></li>
{% endblock %}

{% block layout %}

    <!-- Start header -->
    <div class="section first">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    {% block body %}
                    
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ app.user.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ app.user.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ app.user.email }}</td>
                            </tr>
                        </tbody>
                    </table>
                    
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}